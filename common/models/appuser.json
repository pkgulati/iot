{
    "name": "AppUser",
    "plural": "Users",
    "base": "BaseUser",
    "idInjection": false,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "phone": {
            "type": "String"
        },
        "team": {
            "type": "String"
        }
    },
    "relations": {
        "contacts": {
            "type": "hasMany",
            "model": "Contact",
            "foreignKey": "userId"
        }
    },
    "acls": [
        {
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW",
            "property": "userlogin",
            "accessType": "*"
        },
        {
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW",
            "property": "signup",
            "accessType": "*"
        },
        {
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW",
            "accessType": "READ",
            "property": "__get__contacts"
        }
    ]
}